<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Library" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="YourTheme.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BookLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:titleMargin">5dp</item>
        <item name="android:background">@drawable/border_shape</item>
        <item name="android:gravity"> left|center_horizontal</item>
    </style>
    <style name="BookLayoutText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:gravity"> left|center_horizontal</item>
    </style>
    <style name="BookButton">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">284dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>

    </style>
    <style name="BookText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24sp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#00680A</item>
        <item name="android:textStyle"> bold</item>
    </style>
    <style name="BookTextInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">17sp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#00680A</item>
    </style>

    <style name="ScrollViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">#444444</item>
    </style>
</resources>